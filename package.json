{
    "name": "@istvan.xyz/ui",
    "version": "0.3.1",
    "description": "Core React UI components",
    "scripts": {
        "build": "tsc",
        "test": "cspell \"**/*\" --no-progress",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "prepare": "husky install",
        "postversion": "git push --tags && git push"
    },
    "dependencies": {
        "clsx": "^1.1.1"
    },
    "peerDependencies": {
        "react": "^17.0.0"
    },
    "devDependencies": {
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "cspell": "^5.13.0",
        "husky": "^7.0.4",
        "react-dom": "^17.0.0",
        "typescript": "^4.4.4"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "printWidth": 80,
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/istvan-xyz/ui.git"
    },
    "keywords": [
        "react",
        "ui"
    ],
    "author": "Istv√°n Antal <istvan@antal.xyz>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/istvan-xyz/ui/issues"
    },
    "homepage": "https://github.com/istvan-xyz/ui#readme"
}
