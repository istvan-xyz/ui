{
    "name": "@istvan.xyz/ui",
    "version": "0.4.1",
    "description": "Core React UI components",
    "scripts": {
        "build": "tsc",
        "test": "cspell \"**/*\" --no-progress",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "prepare": "husky install",
        "postversion": "git push --tags && git push",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "deploy-storybook": "storybook-to-ghpages"
    },
    "dependencies": {
        "clsx": "^1.1.1"
    },
    "peerDependencies": {
        "react": "^17.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.17.5",
        "@storybook/addon-essentials": "^6.4.19",
        "@storybook/addon-interactions": "^6.4.19",
        "@storybook/addon-links": "^6.4.19",
        "@storybook/react": "^6.4.19",
        "@storybook/storybook-deployer": "^2.8.10",
        "@storybook/testing-library": "^0.0.9",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "babel-loader": "^8.2.3",
        "cspell": "^5.13.0",
        "husky": "^7.0.4",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "typescript": "^4.4.4"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "printWidth": 80,
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/istvan-xyz/ui.git"
    },
    "keywords": [
        "react",
        "ui"
    ],
    "author": "Istv√°n Antal <istvan@antal.xyz>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/istvan-xyz/ui/issues"
    },
    "homepage": "https://github.com/istvan-xyz/ui#readme"
}
